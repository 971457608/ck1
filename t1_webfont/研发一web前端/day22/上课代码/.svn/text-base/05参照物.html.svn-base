<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<style type="text/css">
			*{
				margin: 0;
				padding: 0;
			}
			.box{
				width: 200px;
				height: 200px;
				background: red;
				margin: 100px auto;
				overflow: hidden;
				border: solid 5px black;
				position: relative;
			}
			.box1{
				width: 100px;
				height: 100px;
				background: blue;
				/*margin: 50px auto;*/
				position: absolute;
				top: 50px;
				left: 50px;
			}
		</style>
		<script type="text/javascript">
			window.onload = function(){
				var box = document.querySelector(".box");
				var box1 = document.querySelector(".box1");
				//offsetWidth 宽度
				//offsetHeight 高度
				//clientWidth 宽度（不包括边框）
				//offsetLeft 距离左边
				//offsetTop 距离上边
				//document.body.clientWidth body宽度
				//document.body.clientHeight  body高度
				//window.innerHeight 浏览器高度
				console.log(box.clientWidth);
				
				console.log(box1.offsetTop);
				console.log(window.innerHeight)
			}
		</script>
	</head>
	<body>
		<div class="box">
			<div class="box1"></div>
		</div>
	</body>
</html>
