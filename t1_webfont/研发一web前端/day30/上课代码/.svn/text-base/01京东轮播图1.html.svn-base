				background: #f5f5f5;
				-moz-user-select: none;
				-ms-user-select: none;
				-webkit-user-select: none;
				-o-user-select: none;
				user-select: none;
			}
			.box1{
				width: 190px;
				height: 100%;
				float: left;
				background: orange;
			}
			.box2{
				width: 1000px;
				height: 100%;
				float: right;
				background: orange;
				position: relative;
				overflow: hidden;
			}
			.list{
				width: 3000px;
				position: absolute;
				top: 0px;
				left: 0px;
			}
			.list li{
				float: left;
				height:260px;
				text-align: center;
				list-style: none;
				width: 200px;
				position: relative;
				background: white;
			}
			.list li:nth-child(2n-1) p{
				position: absolute;
				top: 20px;
				left: 0px;
				width: 100%;
			}
			.list li:nth-child(2n) p{
				position: absolute;
				bottom: 50px;
				left: 0px;
				width: 100%;
			}
			.list img{
				width: 80%;
			}
			.list li:nth-child(2n-1) img{
				position: absolute;
				top: 50px;
				left: 10%;
			}
			.list li:nth-child(2n) img{
				position: absolute;
				top: 20px;
				left: 10%;
			}
			.box3{
				width: 960px;
				border-top: solid 1px #999;
				position: absolute;
				bottom: 15px;
				left: 20px;
				display: none;
			}
			.box4{
				width: 100px;
				height: 10px;
				background: #ccc;
				border-radius: 10px;
				position: absolute;
				top: -5px;
			}
		</style>
		<script type="text/javascript">
			document.addEventListener("DOMContentLoaded",function(){
				var obox = document.querySelector(".obox");
				var list = document.querySelector(".list");
				var box2 = document.querySelector(".box2");
				var box3 = document.querySelector(".box3");
				var box4 = document.querySelector(".box4");
				var timer = setInterval(move,10);
				var i=0;
				function move(){
					i++;
					if(i>=2000){
						i=0;
					}
					list.style.left = -i+"px";
					box4.style.left = i/2000*860+"px";
				}
				obox.onmouseleave = leave;
				function leave(){
					timer = setInterval(move,10);
					box3.style.display = "none";
				}
				obox.onmousemove =function(e){
					clearInterval(timer);
					box3.style.display = "block";
				}
				box4.onmousedown = function(e){
					clearInterval(timer);
					obox.onmouseleave=null;
					var e = e||event;
					//鼠标距离滑块左边距离
					var divx = e.clientX-box2.offsetLeft-box3.offsetLeft-box4.offsetLeft;
					//
					var divx2 = box2.offsetLeft+box3.offsetLeft+divx;
					document.onmousemove = function(e){
						var e = e||event;		
						if(e.clientX-divx2<=0){
							i=0;
							box4.style.left = 0+"px";
							list.style.left = 0+"px";
						}else if(e.clientX-divx2>=860){
							i=2000;
							box4.style.left = 860+"px";
							list.style.left = -2000+"px";
						}else{
							i=(e.clientX-divx2)/860*2000;
							box4.style.left = e.clientX-divx2+"px";
							list.style.left = -i+"px";
						}
						
					}
					document.onmouseup = function(e){
						var e = e||event;
						document.onmousemove=null;
						document.onmouseup=null;
						obox.onmouseleave=leave;
						timer = setInterval(move,10);
						if(e.clientX>obox.offsetLeft && e.clientX<obox.offsetLeft+1200&&e.clientY>=obox.offsetTop&&e.clientY<=obox.offsetTop+260){
							
						}else{
							box3.style.display = "none";
						}
					}
				}
			})
		</script>
